<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Wishlist #<%= @wishlist.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Name</dt>
              <dd><%= @wishlist.name %></dd>

              <dt>Website</dt>
              <dd><%= @wishlist.website %></dd>

              <dt>Price</dt>
              <dd><%= @wishlist.price %></dd>

              <dt>Image url</dt>
              <dd><%= @wishlist.image_url %></dd>

              <dt>User</dt>
              <dd><%= @wishlist.user_id %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <%= link_to wishlists_url, :class => "btn btn-primary" do %>
                <i class="fa fa-chevron-left"></i>
              <% end %>
              <%= link_to edit_wishlist_url(@wishlist.id), :class => "btn btn-warning" do %>
                <i class="fa fa-edit"></i>
              <% end %>
              <%= link_to wishlist_url(@wishlist.id), :method => "delete", :data => { :confirm => "Do you really want to delete this wishlist?" }, :class => "btn btn-danger" do %>
                <i class="fa fa-trash-o"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
